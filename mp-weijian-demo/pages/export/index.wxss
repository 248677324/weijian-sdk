}

.loading_wrap_l {
  width: 300px;
  height: 100px !important;
  background: black;
  opacity: 0.3;
  border-radius: 10px;


}

.loading_item {
  /* display: block; */
  /* padding: 0;
   */
  position: absolute;
  width: 100%;
  top: 200px;
  color: #fff !important;
}

.load_wrap {
  width: 180px;
  height: 60px;
  background: black;
  opacity: 0.7;
  position: absolute;
  top: 204px;
  margin-left: -90px;
  left: 50%;
  border-radius: 6px;
  color: #fff;
  text-align: center;
  line-height: 60px;
  /* line-height:  180px; */
  /* color: white; */
}

.loading {
  margin: 100px auto;
  width: 100px;
  height: 100px;
  border: 1px solid #333333;
  border-bottom: #aaa 10px solid;
  border-radius: 50%;
  animation: load 1.1s infinite linear;

}

@keyframes load {
  from {
    transform: rotate(0deg);
    -ms-transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
    -ms-transform: rotate(360deg);
  }
}
